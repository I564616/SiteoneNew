<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3  http://www.ehcache.org/schema/ehcache-core-3.0.xsd">


    <cache-template name="default">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
    </cache-template>

    <cache alias="defaultCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">360</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100000</heap>
        </resources>
    </cache>

    <cache alias="fieldSetCache" uses-template="default">
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <cache alias="productSearchCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">150</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <cache alias="productCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <cache alias="orderCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
        </resources>
    </cache>

    <cache alias="promotionCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">150</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <cache alias="storeCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">900</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <cache alias="miscsCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">900</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <cache alias="countriesCache" uses-template="default">
        <expiry>
            <ttl unit="seconds">900</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>


</config>