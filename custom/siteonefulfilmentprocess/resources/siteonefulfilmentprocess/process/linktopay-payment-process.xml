<process xmlns="http://www.hybris.de/xsd/processdefinition"
	start="submitPaymentToUE" name="linktopay-payment-process"
	processClass="com.siteone.core.model.LinkToPayPaymentProcessModel">
	<action id="submitPaymentToUE" bean="submitPaymentToUEAction">
		<transition name="OK" to="sendLinkToPayPaymentNotification" />
		<transition name="NOK" to="failed" />
		<transition name="ERROR" to="error" />
	</action>
	<action id="sendLinkToPayPaymentNotification" bean="sendLinkToPayPaymentNotificationAction">
	   <transition name="OK" to="success" />
		<transition name="NOK" to="failed" />
		<transition name="ERROR" to="error" />
	</action>
	<end id="error" state="ERROR">All went wrong.</end>
	<end id="failed" state="FAILED">Payment Details Not Sent To UE.</end>
	<end id="success" state="SUCCEEDED">Payment Details Sent To UE.</end>
</process>