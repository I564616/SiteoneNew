            </td>
        </tr>
        <tr>
            <td colspan="6" align="left">&nbsp;</td>
            <td colspan="2" align="left" style="padding:5px; font-size: 15px; color: #414244;">${ctx.messages.subtotal}
            </td>
            <td colspan="4" align="right" style="padding-right:20px; font-size: 16px;">
                #if($ctx.cart.subTotal.formattedValue != $0.00)
                $ctx.cart.subTotal.formattedValue
                #else
                $0.0
