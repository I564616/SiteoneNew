                    #if (!$entry.product.baseOptions.isEmpty())
                    #foreach ($option in $entry.product.baseOptions)
                    #if ($option.selected && ($option.selected.url == $entry.product.url))
                <table style="color: #666666;" width="100%" cellpadding="0" cellspacing="0">
                    #foreach ($selectedOption in $option.selected.variantOptionQualifiers)
                    <tr>
                        <td width="30%" valign="top">$selectedOption.name:</td>
                        <td width="70%" valign="top">$selectedOption.value</td>
                    </tr>
                    #end
                </table>
                #end
                #end
                #end
                #if (!$ctx.cart.appliedProductPromotions.isEmpty())
                #foreach( $promotion in $ctx.cart.appliedProductPromotions)
                #set ($displayed = false)
                #foreach ($consumedEntry in $promotion.consumedEntries)
                #if (!$displayed && ($consumedEntry.orderEntryNumber == $entry.entryNumber))
                #set ($displayed = true)
                <p style="color: #78a22f;">${promotion.description}</p>
                #end
                #end
                #end
                #end
                </p>
            </td>
        </tr>
        <tr>
            <td rowspan="1" colspan="3" valign="top"><a href="${ctx.baseUrl}$entry.product.url?cid=$entry.product.code"
                    style="text-decoration:none !important; text-decoration:none; color: #78a22f; font-size: 14px; font-weight: bold;">$entry.product.name</a>
            </td>
            <td rowspan="1" colspan="1" valign="top" align="center" style="font-size:15px; color: #5a5b5d;">
                #if($entry.quantity > 0)$entry.quantity#end</td>
            <td rowspan="1" colspan="5" valign="top" align="right" style="padding-right:20px;">
                <span style="font-size:15px; font-weight: bold;">
                    #if($entry.totalPrice.value > 0.0)
                    $entry.totalPrice.formattedValue
                    #elseif($entry.totalPrice.value == 0.0 && $entry.basePrice.value != 0.0)
                    FREE
                    #end
                </span>
                <p style="color: #5a5b5d; margin: 0; padding: 10px 0 20px 0;">
                    #if(!$entry.isPromotionApplied && $entry.saleprice)
                    <del>$${ctx.numberTool.format(${ctx.unitpriceFormat}, $entry.basePrice.value)}
                        #if($entry.uomMeasure) / $entry.uomMeasure #end </del>
                    <span style="color:red; font-weight: 600;">$${ctx.numberTool.format(${ctx.unitpriceFormat},
                        ${entry.saleprice})}#if($entry.uomMeasure) / $entry.uomMeasure #end</span>
                    #elseif($entry.basePrice.value > 0.0)
                    $${ctx.numberTool.format(${ctx.unitpriceFormat}, ${entry.basePrice.value})}#if($entry.uomMeasure) /
                    $entry.uomMeasure #end
                    #end
                </p>
            </td>
        </tr>
        #if (!$ctx.cart.appliedOrderPromotions.isEmpty())
        <tr>
            <td style="font-size: 14px;font-weight: bold;" colspan="12" align="right">
                <p>${ctx.messages.receivedPromotions}</p>
                #foreach( $promotion in $ctx.cart.appliedOrderPromotions)
