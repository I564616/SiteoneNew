$jarResourceCms=$config-jarResourceCmsValue
$emailPackageName=$config-emailContextPackageName
$emailResource=$config-emailResourceValue

INSERT_UPDATE RendererTemplate;code[unique=true];contextClass;rendererType(code)[default='velocity']
;siteone_Email_Ewallet_Notification_Subject;$emailPackageName.EwalletNotificationEmailContext
;siteone_Email_Ewallet_Notification_Body;$emailPackageName.EwalletNotificationEmailContext

# Email page Template
INSERT_UPDATE EmailPageTemplate;$contentCV[unique=true];uid[unique=true];name;active;frontendTemplateName;subject(code);htmlTemplate(code);restrictedPageTypes(code)
;;EwalletNotificationEmailTemplate;Ewallet Notification Email Template;true;eWalletNotificationEmail;siteone_Email_Ewallet_Notification_Subject;siteone_Email_Ewallet_Notification_Body;EmailPage


# Templates for CMS Cockpit Page Edit
UPDATE EmailPageTemplate;$contentCV[unique=true];uid[unique=true];velocityTemplate[translator=de.hybris.platform.commerceservices.impex.impl.FileLoaderValueTranslator]
;;EwalletNotificationEmailTemplate;$jarResourceCms/structure-view/structure_eWalletNotificationEmailTemplate.vm

INSERT_UPDATE ContentSlotName;name[unique=true];template(uid,$contentCV)[unique=true][default='EwalletNotificationEmailTemplate'];validComponentTypes(code)
