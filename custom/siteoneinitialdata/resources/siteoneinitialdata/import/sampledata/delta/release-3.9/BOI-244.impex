;TopContent;;$wideContent;
;BottomContent;;$wideContent;


# Bind Content Slots to Email Page Templates
INSERT_UPDATE ContentSlotForTemplate;$contentCV[unique=true];uid[unique=true];position[unique=true];pageTemplate(uid,$contentCV)[unique=true][default='EwalletNotificationEmailTemplate'];contentSlot(uid,$contentCV)[unique=true];allowOverwrite
