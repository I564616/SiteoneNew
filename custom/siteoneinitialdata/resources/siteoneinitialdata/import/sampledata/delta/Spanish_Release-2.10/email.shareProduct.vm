										#if (${ctx.username}== "Anonymous") 
											${ctx.messages.siteoneShared} 
											#else  ${ctx.username} ${ctx.messages.hasshared} 
											<a href="${ctx.baseurl}${ctx.product.url}">${ctx.messages.clickhere}</a> ${ctx.messages.toview} 
