		<property name="categoryCode" type="String"/>
		<property name="keywordRedirectUrl" type="String"/>
		<property name="spellingSuggestion" type="de.hybris.platform.commerceservices.search.facetdata.SpellingSuggestionData&lt;STATE>"/>
		<property name="contentCategoryData" type="java.util.List&lt;com.siteone.contentsearch.ContentCategoryData>"/>
	</bean>
	
	<bean class="com.siteone.contentsearch.ContentCategoryData">
		<property name="contentDataList" type="java.util.List&lt;ContentData>" />		
